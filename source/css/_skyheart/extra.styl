.meta-v3
    .readmore
        position: relative
        text-decoration: none

        &::after
            content: ''
            position: absolute
            left: 0
            bottom: -2px
            width: 0
            height: 2px
            background-color: #e67474
            transition: width 0.3s ease

        &:hover::after
            width: 100%
