// 阅读更多下划线
.meta-v3
    .readmore
        position: relative
        text-decoration: none

        &::after
            content: ''
            position: absolute
            left: 0
            bottom: -2px
            width: 0
            height: 2px
            background-color: #e67474
            transition: width 0.3s ease

        &:hover::after
            width: 100%

// 顶部菜单栏聚焦模糊
ul.nav-list-h li
    transition: 0.5s

ul.nav-list-h:hover li
    opacity: 0.2
    filter: blur(2px)

ul.nav-list-h li:hover
    opacity: 1
    filter: blur(0px)

